<% provide(:title, "Login") %>
<div class="login">
<%= form_tag login_path, :method => :post do |f| %>
	<fieldset>
		<legend>Login</legend>
		<%= label_tag :account_name, t('.account_name') %><%= text_field_tag :account_name %>
		<%= label_tag :password, t('.password') %><%= password_field_tag :password %>
		<div class="actions"><%= submit_tag t('.login') %></div>
	</fieldset>
<% end %>
<p><%= link_to t('.forgot_password'), new_password_reset_path %></p>
</div>
